{
  "compilerOptions": {
    "allowJs": true,
    "target": "es5",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types", "./typings.d.ts"],
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
